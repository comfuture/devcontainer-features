{
  "name": "Flutter",
  "id": "flutter",
  "version": "0.1.0",
  "description": "Flutter development environment",
  "options": {},
  // "dependsOn": {
  //   "ghcr.io/nordcominc/devcontainer-features/android-sdk:1": {},
  //   "ghcr.io/devcontainers-community/templates/dart:1": {}
  // },
  "customizations": {
    "vscode": {
      "extensions": [
        "dart-code.flutter"
      ],
      "settings": {
        "files.watcherExclude": {
          "**/target/**": true
        }
      },
      "launch": {
        "configurations": [
          {
            "name": "Flutter",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "flutterMode": "debug"
          }
        ]
      }
    }
  }
}